<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#808080">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton"
            android:layout_marginLeft="50dp"
            android:background="#800000"
            android:checked="false"
            android:textOff="OFF"
            android:textOn="ON"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Display"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="50dp"
            android:width="500dp"
            android:textAlignment="center"
            android:height="80dp"
            android:background="#ff66CDAA" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:weightSum="1">

            <Space
                android:layout_width="260dp"
                android:layout_height="match_parent" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button"
                android:layout_weight="0.05"
                android:background="#ff87CEEB"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button2"
                android:layout_weight="0.05"
                android:background="#00BFFF"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button3"
                android:layout_weight=".05"
                android:background="#ff6495ED"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button4"
                android:layout_weight=".05"
                android:background="#ff4169E1"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button5"
                android:layout_weight=".05"
                android:background="#ff0000CD"
                android:textColor="#ffffff" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AM or FM"
                android:id="@+id/switch1"
                android:checked="false"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_weight="0.04"
                android:background="#ff000080"
                android:textColor="#ffffff" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <Space
                android:layout_width="200dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Volume"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:layout_weight="0.00" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/seekBar2"
                android:layout_weight="0.10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Level:"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:layout_weight="0.00" />

            <Space
                android:layout_width="215dp"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp" >

            <Space
                android:layout_width="200dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tuner"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:layout_weight="0.00" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/seekBar"
                android:layout_weight="0.10" />

            <Space
                android:layout_width="250dp"
                android:layout_height="match_parent" />
        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#A9A9A9"></LinearLayout>

</LinearLayout>
