<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#808080">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powerbutton"
            android:id="@+id/powerButton"
            android:layout_marginLeft="50dp"
            android:background="#800000"
            android:checked="false"
            android:textOff="OFF"
            android:textOn="ON"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Display"
            android:id="@+id/display"
            android:layout_gravity="center_horizontal"
            android:textSize="50dp"
            android:width="500dp"
            android:textAlignment="center"
            android:height="80dp"
            android:background="#ff66CDAA"
            android:textStyle="italic"
            android:textColor="#0000FF"
            android:typeface="monospace" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:weightSum="1">

            <Space
                android:layout_width="260dp"
                android:layout_height="match_parent" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button"
                android:layout_weight="0.05"
                android:background="#ff87CEEB"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button2"
                android:layout_weight="0.05"
                android:background="#00BFFF"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button3"
                android:layout_weight=".05"
                android:background="#ff6495ED"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button4"
                android:layout_weight=".05"
                android:background="#ff4169E1"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button5"
                android:layout_weight=".05"
                android:background="#ff0000CD"
                android:textColor="#ffffff" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AM or FM"
                android:id="@+id/amFmButton"
                android:checked="false"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_weight="0.04"
                android:background="#ff000080"
                android:textColor="#ffffff" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <Space
                android:layout_width="200dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Volume"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:layout_weight="0.00" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/volumeBar"
                android:layout_weight="0.10"
                android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Level:"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:layout_weight="0.00" />

            <Space
                android:layout_width="215dp"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp" >

            <Space
                android:layout_width="200dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tuner"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:layout_weight="0.00" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tunerBar"
                android:layout_weight="0.10"
                android:indeterminate="false" />

            <Space
                android:layout_width="250dp"
                android:layout_height="match_parent" />
        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#A9A9A9"
        android:weightSum="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CD Player"
                android:id="@+id/textView6"
                android:layout_marginLeft="470dp"
                android:layout_marginTop="75dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                              "
                android:id="@+id/textView5"
                android:layout_marginLeft="-340dp"
                android:width="600dp"
                android:layout_marginTop="100dp"
                android:background="#000000"
                android:autoText="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:id="@+id/button6"
                android:layout_weight="0.02"
                android:background="#ff87CEEB"
                android:textColor="#ffffff" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:id="@+id/button7"
                android:layout_weight="0.02"
                android:background="#00BFFF"
                android:textColor="#ffffff" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forward"
                android:id="@+id/button8"
                android:layout_weight=".02"
                android:background="#ff6495ED"
                android:textColor="#ffffff" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat"
                android:id="@+id/button9"
                android:layout_weight=".02"
                android:background="#ff4169E1"
                android:textColor="#ffffff" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eject"
                android:id="@+id/button10"
                android:layout_weight=".02"
                android:background="#ff0000CD"
                android:textColor="#ffffff" />

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />
        </TableRow>
    </LinearLayout>

</LinearLayout>
